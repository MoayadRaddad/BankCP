<?xml version="1.0"?>
<configuration>

  <appSettings>
    <add key="aspnet:UseTaskFriendlySynchronizationContext" value="true" />
  </appSettings>
  <system.web>
    <compilation debug="true" targetFramework="4.7.2" />
    <httpRuntime targetFramework="4.7.2"/>
  </system.web>
	<system.serviceModel>
		<bindings>
			<wsHttpBinding>
				<binding name="secureBasic">
					<security mode="TransportWithMessageCredential">
						<message clientCredentialType="UserName"/>
					</security>
				</binding>
			</wsHttpBinding>
		</bindings>
		<behaviors>
			<serviceBehaviors>
				<behavior name="wsBehaviour">
					<serviceMetadata httpGetEnabled="true" httpsGetEnabled="true"/>
					<serviceDebug includeExceptionDetailInFaults="false"/>
					<serviceCredentials>
						<userNameAuthentication userNamePasswordValidationMode="Custom" customUserNamePasswordValidatorType="WCFBankServices.ServiceAuthenticator, WCFBankServices"/>
					</serviceCredentials>
					<serviceAuthorization serviceAuthorizationManagerType = "WCFBankServices.RestAuthorizationManager, WCFBankServices"/>
				</behavior>
			</serviceBehaviors>
			<endpointBehaviors>
				<behavior name="web">
					<webHttp/>
				</behavior>
			</endpointBehaviors>
		</behaviors>
		<services>
			<service name="WCFBankServices.WCFServices" behaviorConfiguration="wsBehaviour">
				<endpoint address="" binding="wsHttpBinding" bindingConfiguration="secureBasic" contract="WCFBankServices.IWCFServices" />
				<endpoint address ="" binding="webHttpBinding" contract="WCFBankServices.IWCFServices" behaviorConfiguration="web"/>
			</service>
		</services>
		<serviceHostingEnvironment aspNetCompatibilityEnabled="true" multipleSiteBindingsEnabled="true"></serviceHostingEnvironment>
	</system.serviceModel>
	<connectionStrings>
		<add name="DBCS" connectionString="Data Source=(local);Initial Catalog=TSDApp;User ID=sa;Password=P@ssw0rd;" providerName="System.Data.SqlClient" />
	</connectionStrings>
