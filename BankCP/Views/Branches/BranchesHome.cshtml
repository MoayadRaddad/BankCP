@model IEnumerable<BusinessObjects.Models.Branch>

@{
    ViewBag.Title = "BranchesHome";
}

@if (TempData["msg"] != null)
{
    @Html.Raw(TempData["msg"])
    TempData["msg"] = null;
}
<h2>BranchesHome</h2>
<div class="row">
    <div class="col-md-2">
        @Html.ActionLink("Create New Branch", "AddBranch")
    </div>
    <div class="col-md-offset-8 col-2">
        @Html.ActionLink("Services", "ServiceHome", "Services")
    </div>
</div>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.enName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.arName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.active)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        using (Html.BeginForm("DeleteBranch", "Branches", new { branchId = item.id }))
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.enName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.arName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.active)
                </td>
                <td>
                    @Html.ActionLink("Edit", "EditBranch", new { branchId = item.id }) |
                    <input type="submit" value="Delete" class="buttonLink" onclick="return confirm('Are you sure you want to delete @item.enName');" />
                </td>
            </tr>
        }
    }

</table>
