@model IEnumerable<BusinessObjects.Models.Service>

@{
    ViewBag.Title = "ServiceHome";
}

<h2>ServiceHome</h2>

<p>
    @Html.ActionLink("Create New Service", "AddService")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.active)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.tickets)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        using (Html.BeginForm("DeleteService", "Services", new { serviceId = item.id }))
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.active)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.tickets)
                </td>
                <td>
                    @Html.ActionLink("Edit", "EditService", new { serviceId = item.id }) |
                    <input type="submit" value="Delete" class="buttonLink" onclick="return confirm('Are you sure you want to delete @item.name');" />
                </td>
            </tr>
        }
    }

</table>


<div>
    @Html.ActionLink("Back to Branches", "BranchesHome", "Branches")
</div>